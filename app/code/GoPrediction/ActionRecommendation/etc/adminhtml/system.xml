<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="go_prediction" translate="label" sortOrder="10">
            <label>GoPrediction</label>
        </tab>
        <section id="action_recommendation" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Action Recommendation</label>
            <tab>go_prediction</tab>
            <resource>GoPrediction_ActionRecommendation::configuration</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Configuration</label>
                <field id="public_access_key" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Public Access Key</label>
                    <comment>Copy it from GoPrediction panel.</comment>
                </field>
                <field id="label" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Label</label>
                </field>
            </group>
        </section>
    </system>
</config>